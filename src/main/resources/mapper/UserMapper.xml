<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nickc.mysqldemo.mapper.StudentMapper">
    <resultMap id="student" type="com.nickc.mysqldemo.domain.Student">
        <result property="id" column="id"/>
        <result property="userName" column="username"/>
        <result property="age" column="age"/>
        <result property="salary" column="salary"/>
    </resultMap>

    <select id="getOneById" parameterType="java.lang.Integer" resultMap="student">
      select * from student where id=#{id}
    </select>

    <select id="getAll" resultMap="student">
      select * from student
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.nickc.mysqldemo.domain.Student">
        insert into student(username,age,salary) values (#{userName},#{age},#{salary})
    </insert>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from student where id=#{id}
    </delete>

    <update id="updateById" parameterType="java.lang.Integer">
        update student
        <set>
            <if test="userName!=null">username=#{userName},</if>
            <if test="age!=null">age=#{age},</if>
            <if test="salary!=null">salary=#{salary},</if>
        </set>
        where id=#{id}
    </update>

</mapper>
